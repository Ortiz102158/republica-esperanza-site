<script>
  // ‚ú¶ Acorde√≥n Interactivo ‚ú¶
  document.getElementById('acordeon-container')?.addEventListener('click', function(e) {
    const btn = e.target.closest('.btn-acordeon');
    if (!btn) return;
    const id = btn.getAttribute('data-target');
    const target = document.getElementById(id);
    if (!target) return;

    this.querySelectorAll('.contenido-acordeon').forEach(el => {
      if (el !== target) {
        el.classList.remove('mostrar');
        const b = this.querySelector(`[data-target="${el.id}"]`);
        if (b) b.querySelector('.flecha-acordeon').textContent = '‚ñº';
      }
    });

    const open = target.classList.toggle('mostrar');
    btn.querySelector('.flecha-acordeon').textContent = open ? '‚ñ≤' : '‚ñº';
  });

  // ‚ú¶ Navegaci√≥n por anclas ‚ú¶
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const targetId = this.getAttribute('href');
      if (targetId === '#') return;
      document.querySelectorAll('.section-link').forEach(link => {
        link.classList.remove('active');
      });
      this.classList.add('active');
      if (targetId === '#temas') {
        const firstBtn = document.querySelector('.btn-acordeon');
        if (firstBtn && !document.getElementById(firstBtn.getAttribute('data-target')).classList.contains('mostrar')) {
          firstBtn.click();
        }
      }
      const target = document.querySelector(targetId);
      if (target) {
        window.scrollTo({
          top: target.offsetTop - 80,
          behavior: 'smooth'
        });
      }
    });
  });

  window.addEventListener('scroll', () => {
    let current = '';
    document.querySelectorAll('h2[id]').forEach(section => {
      if (pageYOffset >= section.offsetTop - 100) {
        current = section.getAttribute('id');
      }
    });
    document.querySelectorAll('.section-link').forEach(link => {
      link.classList.remove('active');
      if (link.getAttribute('href') === `#${current}`) {
        link.classList.add('active');
      }
    });
  });
</script>

